{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "types": ["jest"],
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "."  
  },
  "ts-node": {
    "ignoreDiagnostics": [2393, 2300],
    "require": ["dotenv/config", "tsconfig-paths/register"]
  },
  "exclude": ["node_modules"],
}